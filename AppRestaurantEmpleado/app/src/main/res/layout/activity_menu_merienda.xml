<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cargarMenu.MenuMeriendaActivity">
    <!-- 43F6C562 color lindo par app cliente-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#43F6C562"
        tools:layout_editor_absoluteX="-36dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/imgPlatoMerienda"
            android:layout_width="298dp"
            android:layout_height="168dp"
            app:layout_constraintBottom_toTopOf="@+id/txtNombreMerienda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.547"
            app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
            tools:srcCompat="@android:drawable/editbox_dropdown_light_frame" />

        <Button
            android:id="@+id/btnAltaPlatoMerienda"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="228dp"
            android:layout_height="59dp"
            android:text="Cargar Nuevo Plato"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.935" />

        <EditText
            android:id="@+id/txtNombreMerienda"
            android:layout_width="181dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.461" />

        <Spinner
            android:id="@+id/spinnerMerienda"
            android:layout_width="106dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.825"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.463" />

        <EditText
            android:id="@+id/txtDescripcionMerienda"
            android:layout_width="301dp"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Ingredientes"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.626" />

        <EditText
            android:id="@+id/txtPrecioMerienda"
            android:layout_width="301dp"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Precio"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.776" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnImagenPlatoMerienda"
            android:layout_width="93dp"
            android:layout_height="55dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="@+id/imgPlatoMerienda"
            app:layout_constraintTop_toTopOf="@+id/imgPlatoMerienda" />

        <ProgressBar
            android:id="@+id/pbAltaPlatoMerienda"
            style="?android:attr/progressBarStyle"
            android:layout_width="103dp"

            android:layout_height="83dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>