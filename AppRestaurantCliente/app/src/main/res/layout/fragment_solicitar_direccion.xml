<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    tools:context=".ui.pedido.SolicitarDireccionFragment">

    <Button
        android:id="@+id/btnEnviarDomicilio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar_domicilio"
        app:layout_constraintBottom_toTopOf="@+id/btnIngresarUbicacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIngresarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingresar_ubicacion"
        app:layout_constraintBottom_toTopOf="@+id/btnRetirarBuffet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnviarDomicilio" />

    <Button
        android:id="@+id/btnRetirarBuffet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_retirar"
        app:layout_constraintBottom_toTopOf="@+id/btnEnvioCampus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresarUbicacion" />

    <Button
        android:id="@+id/btnEnvioCampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/envio_al_campus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetirarBuffet" />

</androidx.constraintlayout.widget.ConstraintLayout>