<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pedido.PedidoFragment"
    android:id="@+id/frameLayout">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPedidoVerdad"
        android:layout_width="match_parent"
        android:layout_height="646dp"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_conversion_absoluteHeight="474dp"
        tools:layout_conversion_absoluteWidth="357dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="87dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@color/primaryColor"
        android:contentDescription="@string/enviar_pedido"
        android:src="@drawable/camion_blanco"
        android:text="@string/enviar_pedido" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>