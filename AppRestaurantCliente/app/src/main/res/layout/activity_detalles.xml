<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.menudia.DetallesActivity">

    <ImageView
        android:id="@+id/imagenDetalle"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/descripcionPortada"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenDetalle"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="210dp"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textIngredientes"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_below="@id/textDetalleNombre"
        android:text="TextView"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="250dp"
        android:padding="10dp"
        android:textSize="20sp" />


</RelativeLayout>